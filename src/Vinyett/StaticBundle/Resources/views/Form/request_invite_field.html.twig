{% block form_row %}
    {{ form_errors(form) }}
    <div class="widget_column">
        {{ form_widget(form, { 'attr': {'placeholder': 'Enter your email address here!', 'class': 'email_sign_up'} }) }}
    </div>
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul class="form_error">
        {% for error in errors %}
            <li>{{
                error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
            }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}
<div class="activity">
    <div class="title_header">
        <img src="{{ asset(avatar_path(activity.getActor)) }}" class="action_icon">
        <div class="title">
            <a href="{{ path('photostream', { username: activity.getActor.getUrlUsername }) }}">{{ activity.getActor }}</a>
        </div>
        <div class="by">
            commented on <a href="{{ path('view_photo', { username: photo.getOwner.getUrlUsername, photo_id: photo.getId }) }}" class="photobox_link" data-photo="{{ photo.getId }}">
                {% if photo.getTitle is not empty %}
                    {{ photo.getTitle }}
                {% else %} 
                    a photo
                {% endif%}</a> 
                by  <a href="{{ path('photostream', { username: photo.getOwner.getUrlUsername }) }}">{{ photo.getOwner.getUsername|or_you }}</a>.
        </div>
        <div class="date">
            <abbr class="timeago" title="{{ activity.getCreatedAt|render_isodate }}"> {{ activity.getCreatedAt|render_nice_date }}</abbr>
        </div>
    </div>
    <div class="comment_holder">
        {{ comment.getContent }} 
    </div>
    {% include "StreamBundle:feed:photo.primary.html.twig" with { "comment_text_holder": "Reply to this comment..."} %}
</div>